<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical" >
                          
    <RelativeLayout 
        android:id="@+id/layout_goods_bitmap"
        android:layout_width="232dp"
        android:layout_height="232dp"        
        android:orientation="vertical">
        
        <com.innovaee.eorder.mobile.util.RemoteImageView
            android:id="@+id/goods_image"
            android:layout_width="232dp"
            android:layout_height="232dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop" >
        </com.innovaee.eorder.mobile.util.RemoteImageView>

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffeeeeee"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:text="@string/main_griditem_text_name"  
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:textSize="20dp" />        
    </RelativeLayout>   
                                               
    <LinearLayout 
        android:id="@+id/layout_goods_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_goods_bitmap"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <TextView           
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"   
            android:background="#ffeeeeee"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:text="@string/main_griditem_text_price"
            android:textColor="#000000"
            android:layout_weight="1" 
            android:textSize="20dp" />                                                                                                                                                                
    </LinearLayout>
                                                                                                        
</RelativeLayout>